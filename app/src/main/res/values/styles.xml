<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryDark">#00838F</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="cabeceras">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">#00838F</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="boton">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">#00838F</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="editText">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
